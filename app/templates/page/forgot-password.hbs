{{> 'header' }}
<section class="hero hero--signup hero--dynamic-height">
  <div class="hero__content cf">
    <h1>Forgot your password?</h1>
  </div>
</section>
<section class="content-section content-section--signup">
  <form action="#" method="post" class="signup-form">
    <div class="signup-form__error" style="display:none"></div>
    <div class="signup-form__field">
      <input name="email" type="email" placeholder="E-mail">
    </div>
    <div class="signup-form__submit">
      <button type="submit" class="cta-button cta-button--filled js-ripple-button">Reset my password</button>
    </div>
  </form>
</section>
