<section class="modal-overlay">
  <div class="modal-overlay__content">
    <button class="modal-overlay__close"></button>
    <header>
      <img src="images/toggl-logo-icon.svg?1" alt="">
    </header>
    <form action="#" method="post" class="login-form">
      <div class="login-form__error announcement" style="display:none"></div>
      <div class="login-form__error default" style="display:none">
        Couldn't log you in. Please try again!
      </div>
      <div class="login-form__info default" style="display:none">
        Your session has expired. Please log in again.
      </div>
      <div class="login-form__field">
        <input name="email" type="email" placeholder="E-mail" tabindex="1">
      </div>
      <div class="login-form__field">
        <input name="password" type="password" placeholder="Password" tabindex="2">
      </div>
      <div class="login-form__controls">
        <label>
          <input name="remember_me" type="checkbox" checked tabindex="4"> Stay signed in
        </label>
        <a href="/forgot-password" class="js-forgot-password" tabindex="5">Forgot password?</a>
      </div>
      <div class="login-form__submit">
        <button type="submit" class="cta-button cta-button--inline-wider cta-button--filled cta-button--no-arrow cta-button--small js-ripple-button" tabindex="3">Log in</button>
      </div>
      <div class="login-form__oauth">
        <a href="#" class="login-form__oauth__google" tabindex="6">Log in with google</a>
      </div>
    </form>
  </div>
</section>
